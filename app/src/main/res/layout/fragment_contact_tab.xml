<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_contact_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.comms.connection.ContactTabFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/contact_viewpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/contact_tabs"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.viewpager2.widget.ViewPager2>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/contact_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tabSelectedTextColor="?android:textColorPrimary"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="?android:textColorPrimary"
        app:layout_constraintTop_toTopOf="parent">
    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>